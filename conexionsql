<?php
$usuario = "root";
$password = "";
$servidor = "localhost";
$basedatos = "sistemas";
$conexion  = mysqli_connect($servidor, $usuario,"") or die
("No se ha podido conectar con el servidor BD");
$db = mysqli_select_db($conexion, $basedatos) or die
("Upps! Error al conectar con la BD");
$consulta = "SELECT * FROM alumno";
$resultado = mysqli_query($conexion, $consulta) or die
("Error en la consulta a la base de datos");
echo "<table border='2'>";
echo "<tr>";
echo "<th>Nombres</th>";
echo "<th>Apellidos</th>";
echo "<th>Email</th>";
echo "<th>Fecha</th>";
echo "</tr>";
while ($columna = msqli_fetch_array($resultado))

{
    echo "<tr>";
    echo "<td>" . $columna['nombres'] . "<td><td>"
                . $columna['apellidos'] . "</td><td>"
                . $columna['email'] . "</td><td>"
                . $columna['fecha'] . "</td>";
    echo "</tr>";
}

echo "</table>";
mysqli_close($conexion)
?>
